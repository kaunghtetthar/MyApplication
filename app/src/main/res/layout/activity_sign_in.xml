<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaunghtetthar.myapplication.activities.Firstpage">


    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find_map"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <Button
        android:text="Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/weather"
        android:layout_below="@+id/find_map"
        android:layout_toLeftOf="@+id/rest"
        android:layout_toStartOf="@+id/rest" />

    <Button
        android:text="Json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json"
        android:layout_below="@+id/weather"
        android:layout_alignLeft="@+id/weather"
        android:layout_alignStart="@+id/weather"
        android:layout_marginTop="29dp" />

    <Button
        android:text="REST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rest"
        android:layout_above="@+id/weather"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/find_map"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_in" />

    <Button
        android:text="CarParkingJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carparking"
        android:layout_alignTop="@+id/weather"
        android:layout_toLeftOf="@+id/sign_in"
        android:layout_toStartOf="@+id/sign_in" />

    <Button
        android:text="stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/find_map"
        android:layout_alignStart="@+id/find_map"
        android:id="@+id/streaming" />

    <Button
        android:id="@+id/vlc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vlc"
        android:layout_below="@+id/streaming"
        android:layout_alignLeft="@+id/streaming"
        android:layout_alignStart="@+id/streaming"
        android:layout_marginTop="23dp" />

</RelativeLayout>
