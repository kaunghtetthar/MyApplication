<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaunghtetthar.myapplication.activities.HomePage">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:src="@drawable/home_logo"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/find_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/find_special"
        android:layout_alignLeft="@+id/find_special"
        android:layout_alignRight="@+id/find_special"
        android:layout_alignStart="@+id/find_special"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="14dp"
        android:text="Near" />

    <Button
        android:id="@+id/find_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_map"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Check" />

</RelativeLayout>
